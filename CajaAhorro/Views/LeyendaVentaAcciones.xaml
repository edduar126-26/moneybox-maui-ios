<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Money_Box.Views.LeyendaVentaAcciones"
             BackgroundColor="#FAFAFA">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="btnDark" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#42424c"/>
                <Setter Property="TextColor" Value="#FFFFFF"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image Margin="10" HeightRequest="30" Source="LogoMoneybox" HorizontalOptions="Start"/>
            <Label x:Name="NombreSociolbl" VerticalOptions="Center" Margin="10, 10" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView Margin="20">
            <StackLayout>
                <ContentView HeightRequest="55">
                    <Label  Text="Venta de Acciones" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"/>
                </ContentView>
                <StackLayout Margin="4,4,4,4" WidthRequest="132" HorizontalOptions="Fill">
                    <StackLayout Margin="1,1,1,1" HeightRequest="130"  WidthRequest="130" >
                        <Label FontSize="16" Text="Por medio de la presente solicito a Caja Mancomunada de Empleados  Alupeco A. C. , por así convenir a mis intereses, la venta de mis acciones Tipo 'C' por la cantidad indicada abajo. "></Label>
                        <Label FontSize="16" Text="Agradeciendo de antemano la atención prestada a la presente quedo a sus órdenes para cualquier aclaración al presente"></Label>
                    </StackLayout>
                </StackLayout>
                <Label FontSize="16" HorizontalTextAlignment="Center" Text="Monto Venta Acciones"></Label>
                <Entry FontSize="17" HeightRequest="60" HorizontalTextAlignment="Center" IsEnabled="False"  x:Name="MontoVentaAccionestxt" Text="$ 0.00"></Entry>
                <Label FontSize="16" HorizontalTextAlignment="Center" Text="Contraseña Confirmación"></Label>
                <Entry FontSize="17" HorizontalTextAlignment="Center" IsPassword="True"   x:Name="Contraseniatxt" ></Entry>
                
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="RegresarBtn" Grid.Row="0" Grid.Column="0" Text="Regresar" ImageSource="btnRegresar"
                            Clicked="RegresarBtn_Clicked" Style="{DynamicResource btnDark}" />

                    <Button x:Name="AceptarBtn" Grid.Row="0" Grid.Column="1" Text="Aceptar" ImageSource="btnAceptar"
                            Clicked="AceptarBtn_Clicked" Style="{DynamicResource btnDark}" />
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>