<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Money_Box.Views.FirmaDeContratoNormativo">

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Firma" 
               Grid.Row="0" 
               HorizontalOptions="Center" 
               FontSize="Large" />

        <skia:SKCanvasView x:Name="canvasViewC"
                           Grid.Row="1"
                           VerticalOptions="Fill"
                           HorizontalOptions="Fill"
                           PaintSurface="OnCanvasViewPaintSurface"
                           Touch="OnTouchEffectAction"
                           BackgroundColor="LightGray" />

        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Firmar" Clicked="OnFirmarClicked" CommandParameter="{Binding FirmaBase64}" />
            <Button Text="Borrar Firma" Clicked="OnClearClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>