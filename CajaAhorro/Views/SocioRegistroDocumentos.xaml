<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Money_Box.Views.SocioRegistroDocumentos"
             Title="Documentos del Socio">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="btnDark" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#42424c"/>
                <Setter Property="TextColor" Value="#FFFFFF"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20" Spacing="25">

        <Label Text="Carga de documentos" FontSize="Large" HorizontalOptions="Center"/>



        <!-- Comprobante con folio -->
        <StackLayout x:Name="ContenedorComprobante" Spacing="6">
            <Label Text="Comprobante" FontAttributes="Bold"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Button Text="Seleccionar" Grid.Column="0" Clicked="BtnSeleccionarComprobante_Clicked" />
                <Button Grid.Column="1" Clicked="BtnTomarFotoComprobante_Clicked"
        ImageSource="camera.png"
        BackgroundColor="LightGray"
        WidthRequest="50" HeightRequest="50" CornerRadius="25"/>
            </Grid>
            <Label x:Name="LblFolio" Text="No seleccionado" FontAttributes="Italic" FontSize="Small"/>
        </StackLayout>

        <!-- INE -->
        <StackLayout x:Name="ContenedorINE" Spacing="6">
            <Label Text="Documento INE" FontAttributes="Bold"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <Button Text="Seleccionar" Grid.Column="0" Clicked="BtnSeleccionarINE_Clicked" />
                <Button Grid.Column="1" Clicked="BtnTomarFotoINE_Clicked"
                ImageSource="camera.png"
                BackgroundColor="LightGray"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"/>
            </Grid>
            <Label x:Name="LblINE" Text="No seleccionado" FontAttributes="Italic" FontSize="Small"/>
        </StackLayout>

        <!-- DOM -->
        <StackLayout x:Name="ContenedorDOM" Spacing="6">
            <Label Text="Comprobante de Domicilio" FontAttributes="Bold"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <Button Text="Seleccionar" Grid.Column="0" Clicked="BtnSeleccionarDOM_Clicked" />
                <Button Grid.Column="1" Clicked="BtnTomarFotoDOM_Clicked"
                ImageSource="camera.png"
                BackgroundColor="LightGray"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"/>
            </Grid>
            <Label x:Name="LblDOM" Text="No seleccionado" FontAttributes="Italic" FontSize="Small"/>
        </StackLayout>
        <!-- NOM -->
        <StackLayout x:Name="ContenedorNOM" Spacing="6">
            <Label Text="Comprobante de Nómina" FontAttributes="Bold"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <Button Text="Seleccionar" Grid.Column="0" Clicked="BtnSeleccionarNOM_Clicked" />
                <Button Grid.Column="1" Clicked="BtnTomarFotoNOM_Clicked"
                ImageSource="camera.png"
                BackgroundColor="LightGray"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"/>
            </Grid>
            <Label x:Name="LblNOM" Text="No seleccionado" FontAttributes="Italic" FontSize="Small"/>
        </StackLayout>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="RegresarBtn" Grid.Row="0" Grid.Column="0" Text="Regresar" ImageSource="btnRegresar"
            Clicked="RegresarBtn_Clicked" Style="{DynamicResource btnDark}" />

            <Button  Text="Continuar"  Grid.Row="0" Grid.Column="1" ImageSource="btnAceptar"
            Clicked="BtnContinuar_Clicked" Style="{DynamicResource btnDark}" />
        </Grid>
    </StackLayout>
</ContentPage>
