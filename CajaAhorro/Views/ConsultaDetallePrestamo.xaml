                <Button x:Name="RegresarBtn" Grid.Row="0" Grid.Column="0" Text="Regresar" ImageSource="btnRegresar"
                            Clicked="RegresarBtn_Clicked" Style="{DynamicResource btnCerrar}" />
                
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
                    